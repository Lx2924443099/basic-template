{
  "compilerOptions": {
    "target": "ESNext", //编译目标版本   ESNext表示使用最新ES版本规范
    "module": "ESNext", //生成模块代码规范
    "strict": true,
    "esModuleInterop": true, //允许默认导入
    "skipLibCheck": true, //跳过声明文件类型检查
    "forceConsistentCasingInFileNames": true, //强制文件名大小写一致
    "moduleResolution": "Node", //模块解析策略
    "resolveJsonModule": true, //允许导入Json模块
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@": ["./src"]
    },
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
